<h1>새공지사항 작성</h1>
<font color="white">

<% form_for(:notice, :url => admin_notices_path) do |f| %>	

  <%= f.error_messages %>
  <p>
    <%= f.label "공지여부" %><%= f.check_box :is_notice %>
  </p>

  <p>
    <%= f.label :제목 %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :내용 %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit '작성' %><input type="button" value="취소" onClick="location.href='/admin/notices'">
  </p>
<% end %>
</font>